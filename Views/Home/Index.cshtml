@{
    ViewData["Title"] = "Accueil";
    var username = User.Claims.FirstOrDefault(c => c.Type == "name")?.Value ?? "Nom inconnu";
    var email = User.Claims.FirstOrDefault(c => c.Type == "preferred_username")?.Value ?? "Email inconnu";
}

<div class="container d-flex justify-content-center mt-5">
    <div class="card shadow-sm" style="width: 30rem;">
        <div class="card-body text-center">
            <h2 class="card-title mb-3">Bienvenue</h2>
            <p class="text-muted mb-4">Accès utilisateur authentifié</p>

            <p class="mb-2">
                <i class="bi bi-person-fill me-1"></i>
                <strong>Nom :</strong> @username
            </p>

            <p class="mb-3">
                <i class="bi bi-envelope-fill me-1"></i>
                <strong>Email :</strong> @email
            </p>

            <a class="btn btn-outline-primary" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">
                <i class="bi bi-box-arrow-right me-1"></i> Se déconnecter
            </a>
        </div>
    </div>
</div>
