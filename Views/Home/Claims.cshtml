@using System.Security.Claims
@{
    ViewData["Title"] = "Mes Claims";
    var claims = User?.Claims.ToList();
}

<h2>Mes Claims Azure AD</h2>

@if (claims != null && claims.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Type</th>
                <th>Valeur</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in claims)
            {
                <tr>
                    <td>@claim.Type</td>
                    <td>@claim.Value</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Aucun claim trouvé.</p>
}
