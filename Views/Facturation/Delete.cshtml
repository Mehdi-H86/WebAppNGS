@model WebAppNGS.Models.Facturation

@{
    ViewData["Title"] = "Supprimer facture";
}

<h2>Supprimer la facture</h2>

<p>Client : @Model.Client.Nom</p>
<p>Montant : @Model.Montant €</p>
<p>Commande : @Model.Commande.Id</p>
<p>Date : @Model.DateFacture</p>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
