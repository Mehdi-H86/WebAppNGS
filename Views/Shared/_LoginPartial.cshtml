@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies

@if (User.Identity?.IsAuthenticated == true)
{
    <form asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut" method="post" id="logoutForm" class="form-inline">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">@User.Identity.Name</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="nav-link btn btn-link text-dark">Déconnexion</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">Connexion</a>
        </li>
    </ul>
}
